<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewtentruyen"
            android:textSize="20sp"
            android:text="Tên Truyện"
            android:textColor="@color/backgroundColor"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Tác giả"
            android:textSize="20sp"
            android:textColor="#919191"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/textviewdanhsachindex"
            android:layout_below="@+id/textviewtentruyen"
            android:id="@+id/textviewtentacgia1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/iconlove"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewluotthich"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>