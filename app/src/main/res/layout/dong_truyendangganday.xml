<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center" >
    <LinearLayout
        android:background="@color/backgroundColor"
        android:id="@+id/linearlayoutcardviewtruyendangganday"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imageviewtruyendangganday"
            android:layout_width="145dp"
            android:layout_height="100dp"/>
        <TextView
            android:textColor="@color/black"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:text="Tên Truyên"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtentruyendangganday"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/tentacgia"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:text="Tác giả"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtentacgiatruyendangganday"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>