<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/imageviewtruyenhot"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="100dp"
        android:layout_height="80dp"/>
    <TextView
        android:text="Tên Truyện"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@+id/imageviewtruyenhot"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/textviewtentruyenhot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#871271"
        android:textSize="15dp"
        android:text="Tác Giả"
        android:maxLines="1"
        android:layout_toRightOf="@+id/imageviewtruyenhot"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textviewtentruyenhot"
        android:id="@+id/textviewtentacgiahot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>