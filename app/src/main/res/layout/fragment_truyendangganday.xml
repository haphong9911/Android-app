<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="7dp">

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Truyện Đăng Gần Đây"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewtitletruyendangganday"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textviewtitletruyendangganday"
        android:id="@+id/recycleviewtruyendangganday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:id="@+id/textviewxemthemtruyendangganday"
        android:textSize="18sp"
        android:textColor="#649823"
        android:text="Xem Thêm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
