<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imagesearchtruyen"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#04223A"
        android:text="Tên Bài Hát"
        android:layout_toRightOf="@id/imagesearchtruyen"
        android:id="@+id/textviewsearchtruyen"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/backgroundColor"
        android:text="Tên Tác Giả"
        android:layout_below="@id/textviewsearchtruyen"
        android:layout_toRightOf="@id/imagesearchtruyen"
        android:id="@+id/textviewsearchtacgia"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/imageviewsearchluotthich"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>