<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/iconlove"
            android:id="@+id/imageviewdanhsachtruyendangganday"
            android:layout_width="180dp"
            android:layout_height="180dp"/>

    </FrameLayout>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/tentruyen"
        android:text="Thể loại"
        android:gravity="left"
        android:maxWidth="200dp"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/textviewdanhsachtruyendangganday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textviewtacgiatruyenganday"
        android:textSize="13sp"
        android:textColor="@color/tentacgia"
        android:text="Tác Giả"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>